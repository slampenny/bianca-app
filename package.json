{
  "name": "myphonefriend-frontend",
  "version": "1.0.0",
  "description": "MyPhoneFriend Mobile & Web App - React Native/Expo healthcare communication platform for secure caregiver coordination, wellness monitoring, and patient care management. Supports iOS, Android, and web platforms.",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "author": "Jordan Lapp <jordanglapp@gmail.com>",
  "license": "UNLICENSED",
  "keywords": [
    "react-native",
    "expo",
    "healthcare",
    "mobile-app",
    "caregiver",
    "wellness-monitoring",
    "hipaa-compliant",
    "cross-platform",
    "typescript",
    "ignite"
  ],
  "resolutions": {
    "react-native": "0.73.2",
    "expo": "~50.0.21"
  },
  "scripts": {
    "compile": "tsc --noEmit -p . --pretty",
    "format": "prettier --write \"app/**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint": "eslint App.tsx app test --fix --ext .js,.ts,.tsx && npm run format",
    "patch": "patch-package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:maestro": "maestro test .maestro/FavoritePodcast.yaml",
    "test:web:e2e": "NODE_ENV=test npx playwright test",
    "test:workflows": "NODE_ENV=test npx playwright test test/e2e/workflow-*.e2e.test.ts --reporter=list",
    "test:workflows:working": "NODE_ENV=test npx playwright test test/e2e/workflow-*-working.e2e.test.ts --reporter=list",
    "adb": "adb reverse tcp:9090 tcp:9090 && adb reverse tcp:3000 tcp:3000 && adb reverse tcp:9001 tcp:9001 && adb reverse tcp:8081 tcp:8081",
    "postinstall": "patch-package",
    "bundle:visualize": "npx react-native-bundle-visualizer",
    "bundle:visualize:dev": "npx react-native-bundle-visualizer --dev",
    "build:ios:sim": "eas build --profile development --platform ios --local",
    "build:ios:dev": "eas build --profile development:device --platform ios --local",
    "build:ios:prod": "eas build --profile production --platform ios --local",
    "build:android:sim": "eas build --profile development --platform android --local",
    "build:android:dev": "eas build --profile development:device --platform android --local",
    "build:android:prod": "eas build --profile production --platform android --local",
    "build:android:prod:cloud": "eas build --profile production --platform android",
    "build:android:apk": "eas build --profile preview --platform android",
    "build:android:apk:local": "eas build --profile local-apk --platform android --local",
    "build:ios:prod:cloud": "eas build --profile production --platform ios",
    "submit:android": "eas submit --platform android --profile production",
    "submit:ios": "eas submit --platform ios --profile production",
    "deploy:android": "yarn build:android:prod:cloud && yarn submit:android",
    "deploy:ios": "yarn build:ios:prod:cloud && yarn submit:ios",
    "deploy:both": "yarn build:android:prod:cloud && yarn build:ios:prod:cloud && yarn submit:android && yarn submit:ios",
    "start": "npx expo start",
    "start:staging": "EXPO_PUBLIC_ENVIRONMENT=staging npx expo start",
    "android": "npx expo run:android",
    "ios": "npx expo run:ios",
    "web": "npx expo start --web",
    "web:staging": "EXPO_PUBLIC_ENVIRONMENT=staging npx expo start --web",
    "web:prod": "npx expo start --no-dev --web",
    "bundle:web": "npx expo export --platform web",
    "bundle:web:staging": "EXPO_PUBLIC_ENVIRONMENT=staging npx expo export --platform web",
    "serve:web": "npx server dist",
    "prebuild:clean": "npx expo prebuild --clean",
    "terraform:command": "docker run --rm -it -v \"$(pwd):/app\" -v \"/home/jordanlapp/.aws:/root/.aws\" -w /app/devops/terraform -e AWS_PROFILE=jordan -e AWS_SDK_LOAD_CONFIG=1 -e AWS_DEFAULT_REGION=us-east-2 hashicorp/terraform:latest",
    "terraform:destroy": "docker run --rm -it -v \"$(pwd):/app\" -v \"/home/jordanlapp/.aws:/root/.aws\" -w /app/devops/terraform -e AWS_PROFILE=jordan -e AWS_SDK_LOAD_CONFIG=1 -e AWS_DEFAULT_REGION=us-east-2 hashicorp/terraform:latest destroy --auto-approve",
    "terraform:taint": "docker run --rm -it -v \"$(pwd):/app\" -v \"/home/jordanlapp/.aws:/root/.aws\" -w /app/devops/terraform -e AWS_PROFILE=jordan -e AWS_SDK_LOAD_CONFIG=1 -e AWS_DEFAULT_REGION=us-east-2 hashicorp/terraform:latest taint",
    "terraform:init": "docker run --rm -it -v \"$(pwd):/app\" -v \"/home/jordanlapp/.aws:/root/.aws\" -w /app/devops/terraform -e AWS_PROFILE=jordan -e AWS_SDK_LOAD_CONFIG=1 -e AWS_DEFAULT_REGION=us-east-2 hashicorp/terraform:latest init",
    "terraform:plan": "docker run --rm -v \"$(pwd):/app\" -v \"/home/jordanlapp/.aws:/root/.aws\" -w /app/devops/terraform -e AWS_PROFILE=jordan -e AWS_SDK_LOAD_CONFIG=1 -e AWS_DEFAULT_REGION=us-east-2 hashicorp/terraform:latest plan -no-color -input=false",
    "terraform:apply": "docker run --rm -it -v \"$(pwd):/app\" -v \"/home/jordanlapp/.aws:/root/.aws\" -w /app/devops/terraform -e AWS_PROFILE=jordan -e AWS_SDK_LOAD_CONFIG=1 -e AWS_DEFAULT_REGION=us-east-2 hashicorp/terraform:latest apply -auto-approve",
    "terraform:deploy": "yarn terraform:init && yarn terraform:plan && yarn terraform:apply"
  },
  "dependencies": {
    "@expo-google-fonts/space-grotesk": "^0.2.2",
    "@expo/metro-runtime": "~3.1.3",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-native-community/cli-server-api": "^18.0.0",
    "@react-native-picker/picker": "2.6.1",
    "@react-navigation/bottom-tabs": "^6.3.2",
    "@react-navigation/drawer": "^6.6.11",
    "@react-navigation/material-top-tabs": "6.2.2",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.0.2",
    "@react-navigation/stack": "^6.3.29",
    "@reduxjs/toolkit": "^2.2.1",
    "@shopify/flash-list": "1.6.3",
    "apisauce": "3.0.1",
    "date-fns": "^2.30.0",
    "expo": "~50.0.21",
    "expo-application": "~5.8.4",
    "expo-build-properties": "~0.11.0",
    "expo-constants": "^17.0.8",
    "expo-dev-client": "~3.3.12",
    "expo-font": "~11.10.2",
    "expo-image-picker": "~14.7.1",
    "expo-linking": "~6.2.2",
    "expo-localization": "~14.8.4",
    "expo-router": "3.4.2",
    "expo-splash-screen": "~0.26.5",
    "expo-status-bar": "~1.11.1",
    "i18n-js": "3.9.2",
    "jwt-decode": "^4.0.0",
    "mobx": "6.10.2",
    "mobx-react-lite": "4.0.5",
    "mobx-state-tree": "5.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.2",
    "react-native-drawer-layout": "4.0.0-alpha.1",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-pager-view": "6.2.3",
    "react-native-paper-dates": "^0.22.11",
    "react-native-reanimated": "~3.6.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-tab-view": "3.0.0",
    "react-native-web": "~0.19.6",
    "react-native-webview": "^13.13.5",
    "react-phone-number-input": "^3.4.12",
    "react-redux": "^9.1.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-arrow-functions": "^7.0.0",
    "@babel/plugin-transform-shorthand-properties": "^7.0.0",
    "@babel/plugin-transform-template-literals": "^7.0.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@expo/metro-config": "^0.17.8",
    "@playwright/test": "^1.52.0",
    "@react-native/babel-preset": "^0.79.0",
    "@react-native/metro-config": "^0.79.0",
    "@types/i18n-js": "3.8.2",
    "@types/jest": "^29.2.1",
    "@types/node": "^22.14.1",
    "@types/react": "~18.2.14",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "axios": "^1.7.0",
    "babel-jest": "^29.2.1",
    "babel-plugin-react-native-web": "^0.19.13",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-native": "4.0.0",
    "eslint-plugin-reactotron": "^0.1.2",
    "expo-modules-autolinking": "^2.0.8",
    "jest": "^29.2.1",
    "jest-expo": "~50.0.4",
    "patch-package": "6.4.7",
    "playwright-bdd": "^8.4.1",
    "postinstall-prepare": "1.0.1",
    "prettier": "2.8.8",
    "react-devtools": "^6.1.1",
    "react-native-paper": "^5.13.1",
    "react-native-vector-icons": "^10.2.0",
    "react-test-renderer": "18.2.0",
    "reactotron-core-client": "^2.8.13",
    "reactotron-mst": "^3.1.7",
    "reactotron-react-js": "^3.3.11",
    "reactotron-react-native": "^5.0.5",
    "redux": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "standard",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-native",
      "reactotron"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "afterEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    },
    "rules": {
      "@typescript-eslint/ban-ts-ignore": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/member-delimiter-style": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-object-literal-type-assertion": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "comma-dangle": 0,
      "multiline-ternary": 0,
      "no-undef": 0,
      "no-unused-vars": 0,
      "no-use-before-define": 0,
      "no-global-assign": 0,
      "quotes": 0,
      "react-native/no-raw-text": 0,
      "react/no-unescaped-entities": 0,
      "react/prop-types": 0,
      "space-before-function-paren": 0,
      "reactotron/no-tron-in-production": "error"
    }
  }
}
