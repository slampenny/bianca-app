{
  "family": "bianca-service",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "bianca-app-backend",
      "image": "730335291008.dkr.ecr.us-east-2.amazonaws.com/bianca-app-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MONGODB_URL",
          "value": "mongodb://localhost:27017/bianca-app"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ]
    },
    {
      "name": "mongodb",
      "image": "mongo:4.2.1-bionic",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 27017,
          "hostPort": 27017,
          "protocol": "tcp"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "executionRoleArn": "arn:aws:iam::730335291008:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::730335291008:role/ecsTaskRole",
  "cpu": "256",
  "memory": "512"
}
